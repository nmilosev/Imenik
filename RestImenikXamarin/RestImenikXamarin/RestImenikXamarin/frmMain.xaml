<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestImenikXamarin.frmMain">
  <StackLayout Padding="10">
    <StackLayout Orientation="Horizontal" Padding="5">
      <Entry HorizontalOptions="FillAndExpand" x:Name="txtSearch"></Entry>
      <Button Clicked="Trazi" Text="Traži"></Button>

    </StackLayout>
    <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Padding="5">
      <Button Clicked="Svi" Text="Svi" HorizontalOptions="FillAndExpand"></Button>
      <Button Clicked="Privatni" Text="Privatni" HorizontalOptions="FillAndExpand"></Button>
      <Button Clicked="Sluzbeni" Text="Službeni" HorizontalOptions="FillAndExpand"></Button>
    </StackLayout>

    <ActivityIndicator x:Name="Busy" IsRunning="True" />
    <Label HorizontalOptions="Center" x:Name="txtStatus"></Label>
    <StackLayout x:Name="Root" Padding="5" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand"></StackLayout>

    <Button HorizontalOptions="FillAndExpand" Text="Dodavanje novog kontakta" Clicked="Novi"></Button>

  </StackLayout>
</ContentPage>